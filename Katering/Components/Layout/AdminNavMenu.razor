@page "/admin-dashboard"

<div>
    <ul style="list-style:none; padding-left:0;">
        <li style="display:inline-block; margin-right:10px;">
            <button @onclick="() => selectedTab = Tab.Users">Manage Users</button>
        </li>
        <li style="display:inline-block; margin-right:10px;">
            <button @onclick="() => selectedTab = Tab.Meals">Manage Meals</button>
        </li>
        <li style="display:inline-block;">
            <button @onclick="() => selectedTab = Tab.Categories">Manage Categories</button>
        </li>
    </ul>

    @if (selectedTab == Tab.Users)
    {
        <AdminUserManage />
    }
    else if (selectedTab == Tab.Meals)
    {
        <AdminMealMenage />
    }
    else
    {
        <ManageCategories />
    }
</div>

@code {
    private enum Tab { Users, Meals, Categories }
    private Tab selectedTab = Tab.Users;
}